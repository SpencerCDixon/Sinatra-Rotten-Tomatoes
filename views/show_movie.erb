<h1 style="margin-bottom: 40px;"> <%= @single_movie["title"] %> </h1>
<div style="margin-top: 20px;"></div>
<div class="row" style="margin-bottom: 40px;">
  <div class="col-md-2">
    <img src="<%= @single_movie["posters"]["profile"] %>">
  </div>
  <div class="col-md-10">
    <h3 style="margin-top: 0;"> Synopsis </h3>
    <p> <%= @single_movie["synopsis"] %> </p>
  </div>
</div>
<h3> Critic Consensus </h3>
<p> <%= @single_movie["critics_consensus"] %> </p>

<h3> Write A Review </h3>
<%= erb :form_layout %>

<h1> All Reviews: </h1>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Review </th>
    <th>Time Written </th>
  </tr>
<% @reviews.each do |review| %>
  <% if review[:id] == params[:id] %>
    <tr>
      <td><a href="/movies/<%= params[:id] %>/review"> <%= review[:name] %> </a></td>
      <td> <%= review[:review] %> </td>
      <td> <%= review[:time] %> </td>
    </tr>
  <% end %>
<% end %>
